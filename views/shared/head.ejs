<head>
  <title>
    <%_ if (locals.title) { _%>
      <%- title %> -
    <%_ } _%>
    Resume Today
  </title>
  <script>
    function showTheme() {
      var preferredMode = localStorage.getItem('preferredMode');
      if (preferredMode === 'dark') {
        document.body.style.backgroundColor = 'black';
        setTheme(preferredMode); // Apply the preferred mode
      } else {
        document.body.style.backgroundColor = 'white';
        setTheme('light');
      }
    }
  
    function setTheme(theme) {
      var body = document.querySelector('body');
      var logo = document.querySelector('#logo');
  
      // Add class based on theme
      if (theme === 'dark') {
        body.classList.add('dark-mode');
        logo.src = '../ResumeTodayLogo_dark.png';
      } else {
        body.classList.remove('dark-mode');
        logo.src = '../ResumeTodayLogo.png';
      }
  
      // Store preferred mode in localStorage
      localStorage.setItem('preferredMode', theme);
  
      // Show the content once the theme is applied
      document.body.style.visibility = 'visible';
      document.body.style.opacity = 1;
    }
  
    window.addEventListener('DOMContentLoaded', showTheme);
  </script>
  
  <link rel="preload" href="../site.css" as="style">
  <link id='default' rel="stylesheet" type="text/css" href="/site.css">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      /* Add CSS transitions for a smooth color change */
			transition: background-color 0.000000000000000000000000000000000000000000000000000000001ms ease, color 0.000000000000000000000000000000000000000000000000000000001ms ease;
    }

    .transition {
			/* Set the body background color and text color for dark mode */
			background-color: #000;
			color: white;
		}
  </style>
</head>